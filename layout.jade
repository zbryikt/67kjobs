doctype html
//- basic libraries: jquery(1.10.2), d3js(3.3.11), angularjs(1.2.3), bootstrap(3.0)/semantic-ui(0.9.3/0.9.5)
- var usecdn = true
- var useog = true
- var lib = { jquery: true, d3js: true, angular: true, bootstrap: true, semantic: false }
- var assets = "assets"
- var thumbnail = "http://67kjobs.info/img/thumbnail.png"
html(lang="en")
  head(prefix="og: http://ogp.me/ns#")
    meta(charset="utf-8")
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title 67kjobs / 六萬七職缺網
    // libraries
    include library.jade
    // custom files
    link(rel="icon",type="image/png",href="icon.png")
    link(rel="stylesheet",type="text/css",href="index.css")
    script(type="text/javascript",src="//cdn.firebase.com/js/client/1.0.17/firebase.js")
    script(type="text/javascript",src="//cdn.firebase.com/v0/firebase-simple-login.js")
    script(type="text/javascript",src="//cdn.firebase.com/libs/angularfire/0.7.1/angularfire.min.js")
    script(type="text/javascript",src="jobs.js")
    script(type="text/javascript",src="index.js")
  body(ng-app="jobs",ng-controller="index")
    nav.navbar.navbar-default.navbar-fixed-top.navbar-inverse(role="navigation")
      .container-fluid
        a.navbar-brand(href="/") 
          img(src="img/logo-mini.png")
      .collapse.navbar-collapse
        ul.nav.navbar-nav
          li: a(href="/#aboutus") 關於我們
          li: a(href="/#list-job") 職缺列表
          li: a(href="/#post-job") 刊登職缺
          li: a
            .fb-like(data-href="http://67kjobs.info",data-layout="button_count",data-action="like",data-show-faces="false",data-share="true")
        ul.nav.navbar-nav.pull-right
          li(ng-show="!user")
            a(ng-click="login()") 以臉書登入
          li.avatar(ng-show="user"): a 
            .pic(ng-attr-style="background-image:url(http://graph.facebook.com/{{user.id}}/picture)")
            | {{user.displayName}}
          li(ng-show="user"): a(ng-click="logout()") 登出

